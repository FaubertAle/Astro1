---
const { selected } = Astro.props;
const pages = ['home', 'about', 'blog'];
---
<div class="menu-list hide fx-cont">
    { pages.map((page)=>{
        return (
            <a 
                href={page === 'home'?'/' : '/'+page} 
                class={page === selected.toLowerCase() && 'active'}
            >
                {page.toUpperCase()}
            </a>
            )
        })
    }
</div>

<style>
    .menu-list {
        position: absolute;
        top: 100%;
        flex-direction: column;
        background-color: rgba(255, 235, 205, 0.25);
        padding: 5px;
        a {
            text-decoration: none;
        }
        .active {
            color: green;
        }
    }
    .hide {
        display: none;
    }

</style>